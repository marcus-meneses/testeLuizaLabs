{
  "name": "@mmeneses/testeluizalabs",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    
    "tests": "node --import tsx --test tests/**/*Test.ts",
    "tests:monitor": "node --import tsx --watch --test tests/**/*Test.ts ",
    "build:dev": "rimraf ./dist && npx tsc && tsc-alias",
    "build:prod": "rimraf ./dist && npx tsc --sourceMap false && tsc-alias",
    "execute:dev": "node ./dist/index.js",
    "execute:prod": "node ./index.js",
    "execute:monitor": "tsx watch ./src/index.ts",
    "postbuild": "cp package.json ./dist/package.json && cp package-lock.json ./dist/package-lock.json  && cd ./dist && npm ci --production"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "paths": {
    "src": "src",
    "dist": "dist"
  },
  "dependencies": {
    "mongoose": "^8.8.3",
    "mysql2": "^3.11.5"
  }
}
